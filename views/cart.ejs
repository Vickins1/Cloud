<script>
   document.addEventListener('DOMContentLoaded', () => {
    const checkoutForm = document.getElementById('checkoutForm');
    const submitButton = document.getElementById('confirmCheckout');
    const buttonText = submitButton?.querySelector('.button-text');
    const loader = submitButton?.querySelector('.loader');
    const locationSelect = document.getElementById('customerLocation');
    const deliveryFeeInput = document.getElementById('deliveryFee');
    const cartSubtotalInput = document.getElementById('cartSubtotal');
    const cartTotalInput = document.getElementById('cartTotal');

    // Update total based on delivery location
    function updateTotal() {
        const deliveryFee = parseFloat(locationSelect.selectedOptions[0]?.dataset.delivery || 0);
        const subtotal = parseFloat(cartSubtotalInput.value) || 0;
        const total = subtotal + deliveryFee;
        deliveryFeeInput.value = deliveryFee.toFixed(2);
        cartTotalInput.value = total.toFixed(2);
    }

    if (locationSelect) {
        locationSelect.addEventListener('change', updateTotal);
        updateTotal();
    }

    // Form submission handler
    if (checkoutForm) {
        checkoutForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            // Show loader on button and disable form
            if (submitButton && buttonText && loader) {
                submitButton.disabled = true;
                buttonText.style.display = 'none';
                loader.style.display = 'inline-flex';
                checkoutForm.querySelectorAll('input, select, button').forEach(el => el.disabled = true);
            }

            const formData = {
                customerName: document.getElementById('customerName').value,
                customerEmail: document.getElementById('customerEmail').value,
                customerPhone: document.getElementById('customerPhone').value,
                customerLocation: document.getElementById('customerLocation').value,
                cartTotal: document.getElementById('cartTotal').value
            };

            await initiatePayment(formData);
        });
    }

    // Initiate payment and verify status
    async function initiatePayment(paymentData) {
        try {
            const response = await fetch('/cart/initiate-payment', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(paymentData)
            });

            const result = await response.json();

            // Hide loader and re-enable form
            if (submitButton && buttonText && loader) {
                submitButton.disabled = false;
                buttonText.style.display = 'inline';
                loader.style.display = 'none';
                checkoutForm.querySelectorAll('input, select, button').forEach(el => el.disabled = false);
            }

            if (result.success && result.transactionRequestId) {
                // Show payment processing modal
                $('#paymentProcessingModal').modal({
                    backdrop: 'static',
                    keyboard: false
                }).modal('show');

                // Start polling payment status
                await pollPaymentStatus(result.transactionRequestId);
            } else {
                // Update modal for error
                $('#modalSpinner').hide();
                $('#modalLoader').hide();
                $('#modalNote').hide();
                $('#modalMessage').text(result.message || 'Failed to initiate payment');
                $('#modalButton').show();
                $('#paymentProcessingModal').modal({
                    backdrop: true,
                    keyboard: true
                });
                $('#paymentProcessingModal').on('hidden.bs.modal', function () {
                    $('#checkoutModal').modal('show');
                });
            }
        } catch (error) {
            console.error('Payment initiation failed:', error);
            if (submitButton && buttonText && loader) {
                submitButton.disabled = false;
                buttonText.style.display = 'inline';
                loader.style.display = 'none';
                checkoutForm.querySelectorAll('input, select, button').forEach(el => el.disabled = false);
            }
            // Update modal for network error
            $('#modalSpinner').hide();
            $('#modalLoader').hide();
            $('#modalNote').hide();
            $('#modalMessage').text('Failed to connect to the server. Please check your connection and try again.');
            $('#modalButton').show();
            $('#paymentProcessingModal').modal({
                backdrop: true,
                keyboard: true
            });
            $('#paymentProcessingModal').on('hidden.bs.modal', function () {
                $('#checkoutModal').modal('show');
            });
        }
    }

    // Poll payment status to sync with backend polling
    async function pollPaymentStatus(transactionRequestId, maxAttempts = 6, intervalMs = 15000) {
        let attempts = 0;

        while (attempts < maxAttempts) {
            try {
                const response = await fetch(`/cart/verify-payment/${transactionRequestId}`);
                const status = await response.json();

                // Update modal with current status
                $('#modalMessage').text(status.message || 'Processing payment...');
                $('#modalSpinner').show();
                $('#modalLoader').show();
                $('#modalNote').show();
                $('#modalButton').hide();

                if (status.status === 'completed' && status.orderId) {
                    // Success: Download receipt and update modal
                    if (status.receipt) {
                        downloadReceipt(status.receipt);
                    }
                    // Update UI to reflect cleared cart (backend already cleared it)
                    document.getElementById('cartSubtotal').value = '0.00';
                    document.getElementById('cartTotal').value = '0.00';
                    document.getElementById('deliveryFee').value = '0.00';
                    const cartItemsContainer = document.querySelector('.cart-items');
                    if (cartItemsContainer) {
                        cartItemsContainer.innerHTML = '';
                    }
                    $('#modalSpinner').hide();
                    $('#modalLoader').hide();
                    $('#modalNote').hide();
                    $('#modalMessage').text(status.message || 'Payment completed successfully!');
                    $('#modalButton').show();
                    $('#paymentProcessingModal').modal({
                        backdrop: true,
                        keyboard: true
                    });
                    $('#paymentProcessingModal').on('hidden.bs.modal', function () {
                        window.location.href = `/cart/order-confirmation/${status.orderId}?status=success&message=${encodeURIComponent(status.message || 'Payment completed successfully!')}`;
                    });
                    return; // Exit polling
                } else if (status.status === 'failed' || status.status === 'error') {
                    // Failure or error: Update modal and redirect
                    let errorMessage = status.message || 'Payment processing failed';
                    let statusType = status.status === 'error' ? 'danger' : 'warning';
                    if (status.details && status.details.ResultDesc) {
                        errorMessage = status.details.ResultDesc; // e.g., "Request cancelled by user"
                    }
                    $('#modalSpinner').hide();
                    $('#modalLoader').hide();
                    $('#modalNote').hide();
                    $('#modalMessage').text(errorMessage);
                    $('#modalButton').show();
                    $('#paymentProcessingModal').modal({
                        backdrop: true,
                        keyboard: true
                    });
                    $('#paymentProcessingModal').on('hidden.bs.modal', function () {
                        $('#checkoutModal').modal('show');
                        window.location.href = `/cart/order-confirmation/null?status=${statusType}&message=${encodeURIComponent(errorMessage)}`;
                    });
                    return; // Exit polling
                } else {
                    // Pending: Continue polling and update message
                    $('#modalMessage').text(status.message || 'Please complete the STK push payment on your phone.');
                }

                attempts++;
                await new Promise(resolve => setTimeout(resolve, intervalMs));
            } catch (error) {
                console.error('Verification error:', error);
                $('#modalSpinner').hide();
                $('#modalLoader').hide();
                $('#modalNote').hide();
                $('#modalButton').show();
                $('#modalMessage').text('Failed to connect to the server. Please check your connection and try again.');
                $('#paymentProcessingModal').modal({
                    backdrop: true,
                    keyboard: true
                });
                $('#paymentProcessingModal').on('hidden.bs.modal', function () {
                    $('#checkoutModal').modal('show');
                    window.location.href = `/cart/order-confirmation/null?status=danger&message=${encodeURIComponent('Network error while verifying payment')}`;
                });
                return; // Exit polling on error
            }
        }

        // Timeout after max attempts
        $('#modalSpinner').hide();
        $('#modalLoader').hide();
        $('#modalNote').hide();
        $('#modalButton').show();
        $('#modalMessage').text('Payment processing timed out');
        $('#paymentProcessingModal').modal({
            backdrop: true,
            keyboard: true
        });
        $('#paymentProcessingModal').on('hidden.bs.modal', function () {
            $('#checkoutModal').modal('show');
            window.location.href = `/cart/order-confirmation/null?status=warning&message=${encodeURIComponent('Payment processing timed out')}`;
        });
    }

    // Show checkout modal based on data attribute
    if (document.body.dataset.showModal === 'true') {
        $(document).ready(function() {
            $('#checkoutModal').modal('show');
        });
    }
});

// Update item quantity in cart
function updateQuantity(itemId, change) {
    event.preventDefault();
    let quantityInput = document.getElementById(`quantity-${itemId}`);
    let quantityDisplay = document.getElementById(`quantity-display-${itemId}`);
    let quantityLabel = document.getElementById(`quantity-label-${itemId}`);
    let currentQuantity = parseInt(quantityInput.value, 10);
    let newQuantity = currentQuantity + change;
    if (newQuantity >= 1) {
        quantityInput.value = newQuantity;
        quantityDisplay.textContent = newQuantity;
        let unit = quantityInput.getAttribute("data-unit");
        let label = "items";
        if (unit === "gram") {
            label = newQuantity === 1 ? "gram" : "grams";
        } else if (unit === "piece") {
            label = newQuantity === 1 ? "piece" : "pieces";
        } else if (unit === "pack") {
            label = newQuantity === 1 ? "pack" : "packs";
        }
        quantityLabel.textContent = label;
        quantityInput.form.submit();
    }
}

// Download receipt PDF
function downloadReceipt(receipt) {
    if (receipt && receipt.data && receipt.filename) {
        const byteCharacters = atob(receipt.data);
        const byteNumbers = new Array(byteCharacters.length);
        for (let i = 0; i < byteCharacters.length; i++) {
            byteNumbers[i] = byteCharacters.charCodeAt(i);
        }
        const byteArray = new Uint8Array(byteNumbers);
        const blob = new Blob([byteArray], { type: receipt.contentType });
        const url = URL.createObjectURL(blob);
        const link = document.createElement('a');
        link.href = url;
        link.download = receipt.filename;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        URL.revokeObjectURL(url);
    }
} 
