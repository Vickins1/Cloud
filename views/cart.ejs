    <div class="content container mt-5">
        <h4 class="mb-4" style="margin-left: 38px;"><strong>Shopping Cart</strong></h4>
    
        <!-- Cart Items and Order Summary -->
        <div class="cart-items" aria-live="polite">
            <% if (cart.length > 0) { %>
                <div class="row">
                    <!-- Cart Items Column -->
                    <div class="cart-items-container col-lg-8">
                        <% cart.forEach(function(item) { %>
                            <div class="cart-item d-flex justify-content-between align-items-center" data-item-id="<%= item._id %>">
                                <div class="cart-item-details">
                                    <h5 class="item-name">
                                        <%= item.productId?.name || 'Unknown Product' %>
                                    </h5>
                                    <p class="item-price">
                                        Price: KES <%= item.productId?.price ? item.productId.price.toFixed(2) : '0.00' %>
                                    </p>
                                    <% if (item.productId) { %>
                                        <form action="/cart/update/<%= item.productId._id %>" method="POST" class="d-flex align-items-center quantity-form">
                                            <input type="hidden" name="itemId" value="<%= item.productId._id %>">
                                            <input type="hidden" name="quantity" id="quantity-<%= item._id %>"
                                                value="<%= item.quantity %>" data-unit="<%= item.productId.quantityType %>">
                                            <button type="submit" class="btn btn-custom quantity-decrease mx-1"
                                                onclick="updateQuantity('<%= item._id %>', -1)" <%= item.quantity <= 1 ? 'disabled' : '' %>
                                                aria-label="Decrease quantity">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <span class="mx-2 font-weight-bold quantity-display" id="quantity-display-<%= item._id %>">
                                                <%= item.quantity %>
                                            </span>
                                            <span class="quantity-label" id="quantity-label-<%= item._id %>">
                                                <% if (item.productId.quantityType === 'gram') { %>
                                                    <%= item.quantity === 1 ? 'gram' : 'grams' %>
                                                <% } else if (item.productId.quantityType === 'piece') { %>
                                                    <%= item.quantity === 1 ? 'piece' : 'pieces' %>
                                                <% } else if (item.productId.quantityType === 'pack') { %>
                                                    <%= item.quantity === 1 ? 'pack' : 'packs' %>
                                                <% } %>
                                            </span>
                                            <button type="submit" class="btn btn-custom quantity-increase mx-1"
                                                onclick="updateQuantity('<%= item._id %>', 1)" <%= item.productId.stockQuantity && item.quantity >= item.productId.stockQuantity ? 'disabled' : '' %>
                                                aria-label="Increase quantity">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </form>
                                    <% } else { %>
                                        <p class="text-danger unavailable-text">This product is no longer available.</p>
                                    <% } %>
                                </div>
                                <div class="cart-item-actions">
                                    <form action="/cart/remove/<%= item._id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-danger remove-item" aria-label="Remove item from cart">
                                            <i class="fas fa-trash-alt"></i> <span class="remove-text">Remove</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
    
                    <!-- Order Summary Column -->
                    <div class="order-summary col-lg-4" aria-labelledby="order-summary-title">
                        <h5 id="order-summary-title" class="mb-3"><i class="fas fa-leaf mr-2"></i>Order Summary</h5>
                        <div class="summary-items">
                            <% cart.forEach(function(item) { %>
                                <div class="summary-item d-flex justify-content-between align-items-center mb-2">
                                    <div class="summary-item-details">
                                        <span class="item-name"><%= item.productId?.name || 'Unknown Product' %></span>
                                        <span class="item-quantity">
                                            x<%= item.quantity %>
                                            <% if (item.productId?.quantityType === 'gram') { %>
                                                <%= item.quantity === 1 ? 'gram' : 'grams' %>
                                            <% } else if (item.productId?.quantityType === 'piece') { %>
                                                <%= item.quantity === 1 ? 'piece' : 'pieces' %>
                                            <% } else if (item.productId?.quantityType === 'pack') { %>
                                                <%= item.quantity === 1 ? 'pack' : 'packs' %>
                                            <% } %>
                                        </span>
                                    </div>
                                    <span class="item-total">
                                        KES <%= item.productId?.price ? (item.quantity * item.productId.price).toFixed(2) : '0.00' %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                        <div class="summary-total d-flex justify-content-between align-items-center mt-3">
                            <strong>Subtotal</strong>
                            <strong>KES <%= total.toFixed(2) %></strong>
                        </div>
                        <div class="text-right mt-3 checkout-wrapper">
                            <button class="btn btn-checkout" data-toggle="modal" data-target="#checkoutModal"
                                <%= cart.length === 0 ? 'disabled' : '' %>
                                aria-label="Proceed to checkout">
                                <i class="fas fa-credit-card mr-2"></i>Proceed to Checkout
                            </button>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <p class="empty-cart-message text-center">Your cart is empty.</p>
                <div class="text-center mt-4">
                    <a href="/products" class="btn btn-explore" aria-label="Explore products">
                        <i class="fas fa-search mr-2"></i>Explore Products
                    </a>
                </div>
            <% } %>
        </div>
