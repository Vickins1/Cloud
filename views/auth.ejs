<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TKJ8PPFD" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Auth Section -->
    <div class="auth-wrapper animate__animated animate__fadeIn">
        <div class="sidebar">
            <a href="/" aria-label="Cloud 420 Home">
                <img src="/images/Cloud.png" alt="Cloud 420 Logo" class="logo">
            </a>
            <button class="toggle-btn active" data-target="signup" aria-controls="signup">Signup</button>
            <button class="toggle-btn" data-target="login" aria-controls="login">Login</button>
        </div>
        <div class="content">
            <!-- Signup Form -->
            <div id="signup" class="form-container active animate__animated animate__fadeIn" role="region" aria-labelledby="signup-heading">
                <h2 id="signup-heading">Create Account</h2>
                <% if (error_msg) { %>
                    <div class="message error animate__animated animate__shakeX" role="alert"><%= error_msg %></div>
                <% } %>
                <% if (success_msg) { %>
                    <div class="message success animate__animated animate__bounceIn" role="alert"><%= success_msg %></div>
                <% } %>
                <form action="/auth/signup" method="POST" id="signupForm">
                    <label for="signup-username">Username</label>
                    <input type="text" id="signup-username" name="username" placeholder="Enter your username" required aria-required="true">
                    
                    <label for="signup-email">Email</label>
                    <input type="email" id="signup-email" name="email" placeholder="Enter your email" required aria-required="true">
                    
                    <label for="signup-password">Password</label>
                    <input type="password" id="signup-password" name="password" placeholder="Enter your password" required aria-required="true">
                    
                    <label for="signup-confirm-password">Confirm Password</label>
                    <input type="password" id="signup-confirm-password" name="confirm-password" placeholder="Confirm your password" required aria-required="true">
                    <div id="passwordError" class="message error" role="alert"></div>
                    
                    <button type="submit">Sign Up</button>
                    <a href="/auth/google" class="google-btn">
                        <img src="https://www.google.com/favicon.ico" alt="Google Icon"> Sign in with Google
                    </a>
                </form>
                <a href="#" data-toggle="login" aria-label="Switch to login form">Already have an account? Login</a>
            </div>

            <!-- Login Form -->
            <div id="login" class="form-container animate__animated animate__fadeIn" role="region" aria-labelledby="login-heading">
                <h2 id="login-heading">Welcome Back</h2>
                <% if (error_msg) { %>
                    <div class="message error animate__animated animate__shakeX" role="alert"><%= error_msg %></div>
                <% } %>
                <% if (success_msg) { %>
                    <div class="message success animate__animated animate__bounceIn" role="alert"><%= success_msg %></div>
                <% } %>
                <form action="/auth/login" method="POST">
                    <label for="login-username">Username</label>
                    <input type="text" id="login-username" name="username" placeholder="Enter your username" required aria-required="true">
                    
                    <label for="login-password">Password</label>
                    <input type="password" id="login-password" name="password" placeholder="Enter your password" required aria-required="true">
                    <div class="form-check">
                        <input type="checkbox" id="togglePassword" class="form-check-input">
                        <label class="form-check-label" for="togglePassword">Show Password</label>
                    </div>
                    
                    <button type="submit">Login</button>
                    <a href="/auth/google" class="google-btn">
                        <img src="https://www.google.com/favicon.ico" alt="Google Icon"> Sign in with Google
                    </a>
                </form>
                <a href="#" data-toggle="signup" aria-label="Switch to signup form">Don't have an account? Sign up</a>
                <a href="#" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal" aria-label="Open forgot password modal">Forgot Password?</a>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Reset Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" aria-label="Close modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/auth/forgot-password" method="POST">
                        <label for="reset-email">Email</label>
                        <input type="email" id="reset-email" name="email" placeholder="Enter your email" required aria-required="true">
                        <button type="submit">Send Reset Link</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script>
        // Toggle between signup and login
        function toggleForm(target) {
            document.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.form-container').forEach(form => form.classList.remove('active'));
            document.querySelector(`.toggle-btn[data-target="${target}"]`).classList.add('active');
            document.getElementById(target).classList.add('active');
        }

        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.addEventListener('click', () => toggleForm(btn.dataset.target));
        });

        document.querySelectorAll('a[data-toggle]').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const target = link.getAttribute('data-toggle');
                if (target === 'signup' || target === 'login') {
                    toggleForm(target);
                }
            });
        });

        // Set initial form state
        const initialForm = '<%= initialForm %>';
        if (initialForm) toggleForm(initialForm);

        // Password match check for signup
        const signupPassword = document.getElementById('signup-password');
        const confirmPassword = document.getElementById('signup-confirm-password');
        const passwordError = document.getElementById('passwordError');
        function checkPasswords() {
            if (signupPassword.value !== confirmPassword.value) {
                passwordError.textContent = 'Passwords do not match.';
                passwordError.classList.add('error');
                passwordError.classList.remove('success');
            } else if (signupPassword.value) {
                passwordError.textContent = 'Passwords match.';
                passwordError.classList.add('success');
                passwordError.classList.remove('error');
            } else {
                passwordError.textContent = '';
            }
        }
        signupPassword.addEventListener('input', checkPasswords);
        confirmPassword.addEventListener('input', checkPasswords);

        // Show/hide password for login
        document.getElementById('togglePassword').addEventListener('change', function () {
            const passwordInput = document.getElementById('login-password');
            passwordInput.type = this.checked ? 'text' : 'password';
        });

        // Google Sign-In placeholder
        function googleSignIn() {
            alert('Google Sign-In requires backend OAuth 2.0 setup. Contact support for assistance.');
        }
    </script>
