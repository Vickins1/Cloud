<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TKJ8PPFD" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Auth Section -->
    <div class="auth-wrapper">
        <div class="sidebar">
            <a href="/">
                <img src="/images/Cloud.png" alt="Cloud 420 Logo" class="logo">
            </a>
            <div class="sidebar-title">Cloud 420</div>
            <button class="toggle-btn active" data-target="signup">Signup</button>
            <button class="toggle-btn" data-target="login">Login</button>
        </div>
        <div class="content">
            <!-- Signup Form -->
            <div id="signup" class="form-container active">
                <h2>Sign Up</h2>
                <% if (error_msg) { %>
                    <div class="message error"><%= error_msg %></div>
                <% } %>
                <% if (success_msg) { %>
                    <div class="message success"><%= success_msg %></div>
                <% } %>
                <form action="/auth/signup" method="POST" id="signupForm">
                    <label for="signup-username">Username</label>
                    <input type="text" id="signup-username" name="username" placeholder="Enter your username" required>
                    
                    <label for="signup-email">Email</label>
                    <input type="email" id="signup-email" name="email" placeholder="Enter your email" required>
                    
                    <label for="signup-password">Password</label>
                    <input type="password" id="signup-password" name="password" placeholder="Enter your password" required>
                    
                    <label for="signup-confirm-password">Confirm Password</label>
                    <input type="password" id="signup-confirm-password" name="confirm-password" placeholder="Confirm your password" required>
                    <div id="passwordError" class="message error"></div>
                    
                    <button type="submit">Signup</button>
                    <a href="#" class="google-btn" onclick="googleSignIn()">
                        <img src="https://www.google.com/favicon.ico" alt="Google Icon"> Sign in with Google
                    </a>
                </form>
                <a href="#" data-toggle="login">Already have an account? Login</a>
            </div>

            <!-- Login Form -->
            <div id="login" class="form-container">
                <h2>Login</h2>
                <% if (error_msg) { %>
                    <div class="message error"><%= error_msg %></div>
                <% } %>
                <% if (success_msg) { %>
                    <div class="message success"><%= success_msg %></div>
                <% } %>
                <form action="/auth/login" method="POST">
                    <label for="login-username">Username</label>
                    <input type="text" id="login-username" name="username" placeholder="Enter your username" required>
                    
                    <label for="login-password">Password</label>
                    <input type="password" id="login-password" name="password" placeholder="Enter your password" required>
                    <div class="form-check">
                        <input type="checkbox" id="togglePassword" class="form-check-input">
                        <label class="form-check-label" for="togglePassword">Show Password</label>
                    </div>
                    
                    <button type="submit">Login</button>
                    <a href="/auth/google" class="google-btn">
                        <img src="https://www.google.com/favicon.ico" alt="Google Icon"> Sign in with Google
                    </a>                    
                </form>
                <a href="#" data-toggle="signup">Don't have an account? Sign up</a>
                <a href="#" data-toggle="modal" data-target="#forgotPasswordModal">Forgot Password?</a>
            </div>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Reset Password</h5>
                    <button type="button" class="close btn-close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/auth/forgot-password" method="POST">
                        <label for="reset-email">Email</label>
                        <input type="email" id="reset-email" name="email" placeholder="Enter your email" required>
                        <button type="submit">Send Reset Link</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Google Sign-In Script -->
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script>
        // Toggle between signup and login
        function toggleForm(target) {
            document.querySelectorAll('.toggle-btn').forEach(b => b.classList.remove('active'));
            document.querySelectorAll('.form-container').forEach(form => form.classList.remove('active'));
            document.querySelector(`.toggle-btn[data-target="${target}"]`).classList.add('active');
            document.getElementById(target).classList.add('active');
        }

        document.querySelectorAll('.toggle-btn').forEach(btn => {
            btn.addEventListener('click', () => toggleForm(btn.dataset.target));
        });

        document.querySelectorAll('a[data-toggle]').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const target = link.getAttribute('data-toggle');
                if (target === 'signup' || target === 'login') {
                    toggleForm(target);
                }
            });
        });

        // Set initial form state based on backend data
        const initialForm = '<%= initialForm %>';
        toggleForm(initialForm);

        // Password match check for signup
        const signupPassword = document.getElementById('signup-password');
        const confirmPassword = document.getElementById('signup-confirm-password');
        const passwordError = document.getElementById('passwordError');
        function checkPasswords() {
            if (signupPassword.value !== confirmPassword.value) {
                passwordError.textContent = 'Passwords do not match.';
                passwordError.classList.add('error');
                passwordError.classList.remove('success');
            } else if (signupPassword.value) {
                passwordError.textContent = 'Passwords match.';
                passwordError.classList.add('success');
                passwordError.classList.remove('error');
            } else {
                passwordError.textContent = '';
            }
        }
        signupPassword.addEventListener('input', checkPasswords);
        confirmPassword.addEventListener('input', checkPasswords);

        // Show/hide password for login
        document.getElementById('togglePassword').addEventListener('change', function () {
            const passwordInput = document.getElementById('login-password');
            passwordInput.type = this.checked ? 'text' : 'password';
        });

        // Google Sign-In placeholder function (requires backend integration)
        function googleSignIn() {
            alert('Google Sign-In functionality requires backend setup. Please configure OAuth 2.0 with Google.');
        }
    </script>
