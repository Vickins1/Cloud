@media (max-width: 400px) {
    .sidebar,
    .content {
        padding: 0.8rem;
    }
    .logo {
        max-width: 150px;
    }
    .sidebar-title {
        font-size: 1.1rem;
    }
    h2 {
        font-size: 1.2rem;
    }
    .toggle-btn {
