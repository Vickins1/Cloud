            display: flex;
            align-items: center;
            justify-content: center;
        }
        .google-btn img {
            width: 18px;
            margin-right: 6px;
        }
        button:hover:not(:disabled), .google-btn:hover {
            background: #4a5657;
            color: #fff;
        }
        button:disabled {
            background: #2a3435;
            opacity: 0.7;
            cursor: not-allowed;
        }
        a {
            color: #a0a0a0;
            text-decoration: none;
            font-size: 0.8rem;
            transition: color 0.3s ease;
            display: block;
            text-align: center;
            margin-top: 0.6rem;
        }
        a:hover {
