<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation | Cloud420</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css"> <!-- Your custom CSS if applicable -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="icon" href="/images/icon.png">
    <style>
        body {
            background: linear-gradient(to bottom, #00401e, #027300);
            font-family: 'Poppins', sans-serif;
            color: #333;
            overflow-x: hidden;
        }

        .order-confirmation-container {
            min-height: 100vh;
            padding: 60px 20px;
            position: relative;
        }

        .order-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        .order-header {
            padding: 30px;
            text-align: center;
            position: relative;
        }

        .success-header {
            background: linear-gradient(135deg, #035925 0%, #028a1b 100%);
        }

        .error-header {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .warning-header {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
        }

        .order-header h2 {
            font-size: 2rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
        }

        .order-header i {
            margin-right: 15px;
            font-size: 2.2rem;
        }

        .order-header .lead {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        .confetti {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            background: url('https://i.imgur.com/7X7X7X7.png') repeat;
            animation: confettiFall 5s infinite;
        }

        .order-body {
            padding: 40px;
            background: #fff;
        }

        .greeting {
            color: #035925;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .order-details {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
        }

        .order-details p {
            margin: 8px 0;
            font-size: 1rem;
            color: #555;
        }

        .order-items-table {
            margin-top: 30px;
        }

        .order-items-table h5 {
            color: #035925;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .order-items-table table {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .order-items-table thead {
            background: #035925;
            color: white;
        }

        .order-items-table th {
            padding: 15px;
            font-weight: 600;
        }

        .order-items-table td {
            padding: 15px;
            font-size: 0.95rem;
            vertical-align: middle; /* Center align content */
        }

        .order-items-table .product-image {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 5px;
            margin-right: 10px;
        }

        .order-items-table .product-cell {
            display: flex;
            align-items: center;
        }

        .order-items-table tfoot td {
            background: #f1f3f5;
            font-weight: 600;
        }

        .order-actions {
            margin-top: 40px;
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .btn-primary, .btn-track {
            background: #035925;
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover, .btn-track:hover {
            background: #02401b;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .btn-secondary {
            background: #6c757d;
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .btn i {
            margin-right: 8px;
        }

        /* Animations */
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        .animate-slide-up {
            animation: slideUp 0.7s ease-out;
        }

        .animate-bounce {
            animation: bounce 1s infinite;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        @keyframes confettiFall {
            0% { background-position: 0 0; }
            100% { background-position: 0 1000px; }
        }

        /* Notification Styles */
        .notification-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
            width: 320px;
        }

        .notification {
            padding: 15px 20px;
            margin-bottom: 15px;
            border-radius: 8px;
            color: white;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            animation: slideIn 0.3s ease;
        }

        .notification-success {
            background: #28a745;
            border-left: 5px solid #218838;
        }

        .notification-danger {
            background: #dc3545;
            border-left: 5px solid #c82333;
        }

        .notification-warning {
            background: #ffc107;
            border-left: 5px solid #e0a800;
            color: #333;
        }

        .notification-title {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .notification-message {
            font-size: 0.9rem;
        }

        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        /* Responsive Adjustments */
        @media (max-width: 992px) { /* Tablets and Smaller */
            .order-confirmation-container {
                padding: 40px 15px;
            }
            .order-card {
                margin: 0 10px;
            }
            .order-header {
                padding: 20px;
            }
            .order-header h2 {
                font-size: 1.8rem;
            }
            .order-header i {
                font-size: 2rem;
            }
            .order-header .lead {
                font-size: 1rem;
            }
            .order-body {
                padding: 30px;
            }
            .greeting {
                font-size: 1.3rem;
            }
            .order-details {
                padding: 20px;
            }
            .order-details p {
                font-size: 0.95rem;
            }
            .order-items-table th, .order-items-table td {
                padding: 12px;
                font-size: 0.9rem;
            }
            .order-items-table .product-image {
                width: 50px;
                height: 50px;
            }
            .order-actions {
                flex-direction: column;
                gap: 10px;
            }
            .btn-primary, .btn-track, .btn-secondary {
                width: 100%;
                padding: 10px;
            }
            .notification-container {
                width: 280px;
                right: 15px;
            }
        }

        @media (max-width: 768px) { /* Phones */
            .order-confirmation-container {
                padding: 30px 10px;
            }
            .order-card {
                margin: 0 5px;
                border-radius: 15px;
            }
            .order-header {
                padding: 15px;
            }
            .order-header h2 {
                font-size: 1.5rem;
            }
            .order-header i {
                font-size: 1.8rem;
                margin-right: 10px;
            }
            .order-header .lead {
                font-size: 0.9rem;
            }
            .order-body {
                padding: 20px;
            }
            .greeting {
                font-size: 1.2rem;
            }
            .order-details {
                padding: 15px;
            }
            .order-details p {
                font-size: 0.9rem;
                margin: 6px 0;
            }
            .order-items-table {
                margin-top: 20px;
            }
            .order-items-table h5 {
                font-size: 1.1rem;
            }
            .order-items-table table {
                font-size: 0.85rem;
            }
            .order-items-table th, .order-items-table td {
                padding: 10px;
            }
            .order-items-table .product-image {
                width: 40px;
                height: 40px;
            }
            .order-actions {
                margin-top: 30px;
            }
            .btn-primary, .btn-track, .btn-secondary {
                padding: 8px;
                font-size: 0.9rem;
            }
            .notification-container {
                width: 90%;
                max-width: 300px;
                right: 10px;
                top: 10px;
            }
            .notification {
                padding: 12px 15px;
            }
            .notification-title {
                font-size: 1rem;
            }
            .notification-message {
                font-size: 0.85rem;
            }
        }

        @media (max-width: 576px) { /* Small Phones */
            .order-confirmation-container {
                padding: 20px 5px;
            }
            .order-card {
                margin: 0;
                border-radius: 10px;
            }
            .order-header {
                padding: 10px;
            }
            .order-header h2 {
                font-size: 1.3rem;
                flex-direction: column;
                gap: 10px;
            }
            .order-header i {
                font-size: 1.6rem;
                margin-right: 0;
            }
            .order-header .lead {
                font-size: 0.85rem;
            }
            .order-body {
                padding: 15px;
            }
            .greeting {
                font-size: 1.1rem;
                margin-bottom: 15px;
            }
            .order-details {
                padding: 10px;
            }
            .order-details p {
                font-size: 0.85rem;
                margin: 5px 0;
            }
            .order-items-table h5 {
                font-size: 1rem;
            }
            .order-items-table table {
                font-size: 0.8rem;
            }
            .order-items-table th, .order-items-table td {
                padding: 8px;
                display: block; /* Stack table cells */
                width: 100%;
                text-align: left;
            }
            .order-items-table thead {
                display: none; /* Hide header on very small screens */
            }
            .order-items-table tr {
                margin-bottom: 10px;
                border-bottom: 1px solid #dee2e6;
            }
            .order-items-table td::before {
                content: attr(data-label);
                font-weight: 600;
                display: inline-block;
                width: 40%;
            }
            .order-items-table .product-cell {
                display: block;
            }
            .order-items-table .product-image {
                width: 50px;
                height: 50px;
                margin-bottom: 5px;
            }
            .order-items-table tfoot td {
                text-align: right;
            }
            .order-actions {
                margin-top: 20px;
                gap: 8px;
            }
            .btn-primary, .btn-track, .btn-secondary {
                padding: 8px;
                font-size: 0.85rem;
            }
            .notification-container {
                width: 95%;
                max-width: 260px;
                right: 5px;
            }
            .notification {
                padding: 10px 12px;
            }
            .notification-title {
                font-size: 0.9rem;
            }
            .notification-message {
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <div class="order-confirmation-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="order-card">
                        <!-- Dynamic Header -->
                        <% if (status === 'success') { %>
                        <div class="order-header success-header">
                            <h2><i class="fas fa-check-circle animate-bounce"></i> Order Confirmed!</h2>
                            <p class="lead text-light mt-2">Thank you for shopping with Cloud420, Ascend Responsibly!</p>
                            <div class="confetti"></div>
                        </div>
                        <% } else if (status === 'error') { %>
                        <div class="order-header error-header">
                            <h2><i class="fas fa-exclamation-triangle"></i> Payment Failed</h2>
                            <p class="lead text-light mt-2">Something went wrong, but we’re here to help Feel free to Contact Support.</p>
                        </div>
                        <% } else { %>
                        <div class="order-header warning-header">
                            <h2><i class="fas fa-clock"></i> Payment Status Pending</h2>
                            <p class="lead text-light mt-2">We’re still processing your payment.</p>
                        </div>
                        <% } %>

                        <!-- Order Body -->
                        <div class="order-body">
                            <!-- Status Messages -->
                            <% if (status === 'success') { %>
                            <div class="alert alert-success animate-fade-in"><%= message %></div>
                            <% } else if (status === 'error') { %>
                            <div class="alert alert-danger animate-fade-in"><%= message %></div>
                            <% } else if (status === 'warning') { %>
                            <div class="alert alert-warning animate-fade-in"><%= message %></div>
                            <% } %>

                            <!-- Order Details -->
                            <% if (order) { %>
                            <div class="order-details animate-slide-up">
                                <h4 class="greeting">Greetings <%= order.customerName %>, your order is on its way within 24hrs!</h4>
                                <p class="text-muted mb-4">Here’s everything you need to know:</p>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <p><strong>Order ID:</strong> <%= order._id %></p>
                                        <p><strong>Date:</strong> <%= new Date(order.createdAt).toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) %></p>
                                        <p><strong>Email:</strong> <%= order.customerEmail %></p>
                                        <p><strong>Phone:</strong> <%= order.customerPhone %></p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <p><strong>Shipping to:</strong> <%= order.customerLocation %></p>
                                        <p><strong>Payment Status:</strong>
                                            <span class="badge <%= order.paymentStatus === 'completed' ? 'bg-success' : 'bg-warning' %>">
                                                <%= order.paymentStatus %>
                                            </span>
                                        </p>
                                        <p><strong>Shipping Status:</strong>
                                            <span class="badge bg-info"><%= order.shippingStatus %></span>
                                        </p>
                                        <p><strong>Transaction ID:</strong> <%= order.transactionRequestId || 'N/A' %></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Order Items -->
                            <div class="order-items-table animate-slide-up">
                                <h5>Your Items</h5>
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% order.items.forEach(item => { %>
                                        <tr>
                                            <td data-label="Product" class="product-cell">
                                                <img src="<%= item.imageUrl %>" alt="<%= item.productName %>" class="product-image">
                                                <span><%= item.productName %></span>
                                            </td>
                                            <td data-label="Qty">
                                                <%= item.quantity %> 
                                                <%= item.quantityType === 'perItem' ? 'item' : 'gram' %>
                                            </td>
                                            <td data-label="Price">KES <%= Number(item.price).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %></td>
                                            <td data-label="Subtotal">KES <%= Number(item.subtotal).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %></td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3"><strong>Subtotal:</strong></td>
                                            <td>KES <%= Number(order.subtotal).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %></td>
                                        </tr>
                                        <tr>
                                            <td colspan="3"><strong>Delivery Fee:</strong></td>
                                            <td>KES <%= Number(order.deliveryFee).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %></td>
                                        </tr>
                                        <tr>
                                            <td colspan="3"><strong>Total:</strong></td>
                                            <td>KES <%= Number(order.total).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') %></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <!-- Actions -->
                            <div class="order-actions text-center animate-fade-in">
                                <a href="/products" class="btn btn-primary"><i class="fas fa-shopping-bag"></i> Shop More</a>
                            </div>
                            <% } else { %>
                            <div class="order-details animate-slide-up">
                                <p class="text-muted">No order details available right now. Please check back later or contact support.</p>
                            </div>
                            <div class="order-actions text-center animate-fade-in">
                                <a href="/cart" class="btn btn-primary"><i class="fas fa-cart-arrow-down"></i> Back to Cart</a>
                                <a href="/products" class="btn btn-secondary"><i class="fas fa-shopping-bag"></i> Continue Shopping</a>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Container -->
    <div class="notification-container"></div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const status = '<%= status %>';
            const message = '<%= message %>';

            if (status && message) {
                showNotification(
                    status === 'success' ? 'Success' : status === 'error' ? 'Error' : 'Warning',
                    message,
                    status === 'success' ? 'success' : status === 'error' ? 'danger' : 'warning'
                );
            }
        });

        function showNotification(title, message, type) {
            const container = document.querySelector('.notification-container') || createNotificationContainer();
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.innerHTML = `<strong class="notification-title">${title}</strong><br><span class="notification-message">${message}</span>`;
            container.appendChild(notification);
            setTimeout(() => notification.remove(), 5000);
        }

        function createNotificationContainer() {
            const container = document.createElement('div');
            container.className = 'notification-container';
            document.body.appendChild(container);
            return container;
        }
    </script>
</body>
</html>