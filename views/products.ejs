.cannabis-leaf-overlay {
    position: absolute;
    top: 20%;
    right: 10%;
    width: 50px;
    height: 50px;
    background: radial-gradient(circle, rgba(74, 112, 74, 0.3) 20%, transparent 60%); /* Muted green */
    clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 5;
}

.product-card:hover .cannabis-leaf-overlay {
    opacity: 0.5;
    animation: leafFade 3s infinite ease-in-out;
}

@keyframes leafFade {
    0% { opacity: 0.5; }
    50% { opacity: 0.7; }
    100% { opacity: 0.5; }
}

/* Carousel Image Styling */
.product-card .carousel-inner {
    background: #1a1a1a; /* Dark gray */
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}

.product-img {
    object-fit: cover;
    height: 200px;
    width: 100%;
    opacity: 0.9;
    transition: opacity 0.3s ease;
}

.product-img:hover {
    opacity: 1;
}

/* Card Body */
.card-body {
    padding: 1rem;
    background: #0a0a0a;
}

.card-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #ffffff;
