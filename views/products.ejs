            .hero-section {
                text-align: center;
                padding: 30px 10px; /* Default padding */
                position: relative;
                background: linear-gradient(to right, #000, #035925);
                color: white;
                overflow: hidden;
                margin-top: 20px;
            }
            .hero-section h1 {
