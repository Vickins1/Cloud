            @media screen and (max-width: 576px) {
                .hero-section {
                    margin-top: 80px;
                    padding: 15px 5px; /* Even smaller padding */
                }
        
                .hero-section h1 {
                    font-size: 1.2rem; /* Even smaller font */
                    margin-top: 15px;
