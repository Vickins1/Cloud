<div class="container mt-5">
    <div class="row">
        <% products.slice().reverse().forEach(product => { %>
            <div class="col-md-3 mb-4">
                <div class="card h-100 product-card" data-product-id="<%= product._id %>" data-category="<%= product.category %>">
                    <!-- 4/20 Badge -->
                    <div class="four-twenty-badge">4/20 Exclusive</div>
                    <!-- Cannabis Leaf Overlay -->
                    <div class="cannabis-leaf-overlay"></div>
                    <!-- Image Carousel -->
                    <div class="carousel slide" data-bs-ride="carousel" id="carousel-<%= product._id %>">
                        <div class="carousel-inner" data-bs-toggle="modal" data-bs-target="#productModal-<%= product._id %>" style="cursor: pointer;">
                            <div class="carousel-item active">
                                <img src="<%= product.imageUrl %>" class="d-block w-100 product-img" alt="Main Product Image">
                            </div>
                            <% if (product.additionalImages && product.additionalImages.length > 0) { %>
                                <% product.additionalImages.forEach((img, index) => { %>
                                    <div class="carousel-item">
                                        <img src="<%= img %>" class="d-block w-100 product-img" alt="Product Image <%= index + 1 %>">
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text short-desc"><%= product.shortDescription %></p>
                        <p class="card-text price text-success">KES <%= product.price.toFixed(2) %></p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-primary buy-now" data-product-id="<%= product._id %>" data-bs-toggle="tooltip" title="Purchase this premium strain">Buy Now</button>
                        <button class="btn btn-dark add-to-cart" data-product-id="<%= product._id %>" data-bs-toggle="tooltip" title="Add to your cart">Add to Cart</button>
                    </div>
                </div>

                <!-- Product Details Modal -->
                <div class="modal fade" id="productModal-<%= product._id %>" tabindex="-1" aria-labelledby="productModalLabel-<%= product._id %>" aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content cosmic-modal">
                            <div class="modal-header cosmic-header">
                                <h5 class="modal-title fw-bold" id="productModalLabel-<%= product._id %>">
                                    <span class="four-twenty-banner">4/20 Exclusive</span>
                                    <%= product.name %>
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body p-4 cosmic-body">
                                <div class="nebula-bg"></div>
                                <div class="row g-4">
                                    <!-- Carousel Section -->
                                    <div class="col-md-6">
                                        <div class="carousel slide" data-bs-ride="carousel" id="modal-carousel-<%= product._id %>">
                                            <div class="carousel-inner rounded">
                                                <div class="carousel-item active">
                                                    <img src="<%= product.imageUrl %>" class="d-block w-100 modal-img img-clickable" alt="Main Product Image" style="object-fit: cover; max-height: 400px;">
                                                </div>
                                                <% if (product.additionalImages && product.additionalImages.length > 0) { %>
                                                    <% product.additionalImages.forEach((img, index) => { %>
                                                        <div class="carousel-item">
                                                            <img src="<%= img %>" class="d-block w-100 modal-img img-clickable" alt="Product Image <%= index + 1 %>" style="object-fit: cover; max-height: 400px;">
                                                        </div>
                                                    <% }) %>
                                                <% } %>
                                            </div>
                                            <button class="carousel-control-prev" type="button" data-bs-target="#modal-carousel-<%= product._id %>" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#modal-carousel-<%= product._id %>" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </div>
                                        <!-- Thumbnail Previews -->
                                        <div class="d-flex flex-wrap gap-2 mt-2 justify-content-center">
                                            <img src="<%= product.imageUrl %>" class="thumbnail rounded img-clickable" style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;" data-bs-target="#modal-carousel-<%= product._id %>" data-bs-slide-to="0" alt="Thumbnail">
                                            <% if (product.additionalImages && product.additionalImages.length > 0) { %>
                                                <% product.additionalImages.forEach((img, index) => { %>
                                                    <img src="<%= img %>" class="thumbnail rounded img-clickable" style="width: 60px; height: 60px; object-fit: cover; cursor: pointer;" data-bs-target="#modal-carousel-<%= product._id %>" data-bs-slide-to="<%= index + 1 %>" alt="Thumbnail">
                                                <% }) %>
                                            <% } %>
                                        </div>
                                    </div>
                                    <!-- Details Section -->
                                    <div class="col-md-6 details-section">
                                        <p class="mt-3 category-box">
                                            <i class="bi bi-tag-fill text-success me-1"></i><strong>Category:</strong>
                                            <span class="text-success fw-semibold"><%= product.category %></span>
                                        </p>
                                        <h6 class="text mb-2">
                                            <i class="bi bi-cash-stack text-success me-1"></i><strong>Price:</strong>
                                            <span class="text-success fw-bold">KES <%= product.price.toFixed(2) %></span>
                                        </h6>
                                        <p class="mt-3 description-box">
                                            <strong class="text-light">Description:</strong>
                                            <span class="text-light d-block mt-1"><%= product.description %></span>
                                        </p>
                                        <p class="availability-box">
                                            <strong class="text-light">Availability:</strong>
                                            <span class="fw-semibold <%= product.stockQuantity > 0 ? 'text-success' : 'text-danger' %> d-inline-flex align-items-center">
                                                <i class="bi <%= product.stockQuantity > 0 ? 'bi-check-circle-fill' : 'bi-x-circle-fill' %> me-1"></i>
                                                <%= product.stockQuantity > 0 ? `In Stock (${product.stockQuantity} left)` : 'Out of Stock' %>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer cosmic-footer">
                                <button class="btn btn-outline-light buy-now" data-product-id="<%= product._id %>">Buy Now</button>
                                <button type="button" class="btn btn-success add-to-cart-modal" data-product-id="<%= product._id %>">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                                <p class="disclaimer">Cloud 420 promotes responsible cannabis use. Please consume wisely.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Lightbox Modal for Full Image View -->
                <div id="imageLightbox-<%= product._id %>" class="lightbox d-none">
                    <div class="lightbox-content">
                        <span class="close-lightbox">×</span>
                        <img id="lightboxImage-<%= product._id %>" src="" alt="Full Image">
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

