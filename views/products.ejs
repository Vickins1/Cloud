                font-weight: bold;
                margin-top: 50px; /* Default margin */
            }
        
            /* Floating Leaves Animation */
            .floating-leaves .leaf {
                position: absolute;
                width: 30px; /* Default size */
                height: 30px;
                background: url('/public/images/leaf-icon.png') no-repeat center;
                background-size: contain;
                opacity: 0.7;
                animation: floatLeaf 6s infinite linear;
            }
        
            @keyframes floatLeaf {
                0% { transform: translateY(0); }
                50% { transform: translateY(-20px); }
                100% { transform: translateY(0); }
            }
        
            /* Hero Title */
            .hero-title {
                font-size: 2.5rem; /* Default size */
                font-weight: bold;
                margin-top: 20px; /* Default margin */
            }
        
            /* Filter Section */
            .filter-container {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                align-items: center;
                gap: 15px; /* Default gap */
                background: rgba(255, 255, 255, 0.1);
                padding: 15px; /* Default padding */
                border-radius: 10px;
                backdrop-filter: blur(5px);
                margin-top: 20px; /* Default margin */
                max-width: 490px; /* Default max-width */
                margin-left: auto;
                margin-right: auto;
            }
        
            /* Inputs and Select */
            .filter-input, .filter-select, .filter-button {
                padding: 12px; /* Default padding */
                border: none;
                border-radius: 8px;
                font-size: 16px; /* Default font size */
            }
        
            .filter-input {
                width: 100%;
                max-width: 250px; /* Default max-width */
                background: rgba(255, 255, 255, 0.8);
                color: black;
            }
        
            .filter-select {
                width: 100%;
                max-width: 180px; /* Default max-width */
                background: white;
            }
        
            .filter-button {
                background: #0f5132;
                color: white;
                cursor: pointer;
                transition: 0.3s;
                font-weight: bold;
            }
        
            .filter-button:hover {
                background: #198754;
