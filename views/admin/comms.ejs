    <style>
        /* Custom Styles for Communications Panel */
        :root {
            --primary-bg: #1a1a1a;
            --secondary-bg: #2a2a2a;
            --text-color: #e0e0e0;
            --accent-color: linear-gradient(45deg, #4CAF50, #00ff73);
            --hover-color: #66BB6A;
            --shadow: 0 4px 15px rgba(0, 255, 115, 0.2);
        }

        .content-wrapper {
            background: var(--primary-bg);
            padding: 2rem 1rem;
            min-height: calc(100vh - 70px); /* Adjust for navbar/footer */
        }

        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .admin-container h1 {
            font-size: 2.5rem;
            color: transparent;
            background: var(--accent-color);
            -webkit-background-clip: text;
            background-clip: text;
            text-align: center;
            margin-bottom: 2rem;
            animation: slideIn 1s ease-in-out;
            text-shadow: 0 2px 5px rgba(0, 255, 115, 0.3);
        }

        /* Flash Messages */
        .flash-messages {
            margin-bottom: 2rem;
            text-align: center;
        }

        .flash-success {
            background: rgba(76, 175, 80, 0.9);
            color: #fff;
            padding: 1rem;
            border-radius: 10px;
            box-shadow: var(--shadow);
            animation: fadeIn 0.5s ease-in-out;
            font-weight: bold;
        }

        .flash-error {
            background: rgba(244, 67, 54, 0.9);
            color: #fff;
            padding: 1rem;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(244, 67, 54, 0.2);
            animation: fadeIn 0.5s ease-in-out;
            font-weight: bold;
        }

        /* Message List */
        .message-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 2rem;
            padding: 1rem;
        }

        .message-card {
            background: linear-gradient(135deg, #2a2a2a, #333); /* Subtle gradient */
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(76, 175, 80, 0.2);
        }

        .message-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0, 255, 115, 0.4);
        }

        .message-card::before {
            content: '\f4d8'; /* Cannabis leaf icon */
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            position: absolute;
            top: -10px;
            right: -10px;
            font-size: 3rem;
            color: rgba(76, 175, 80, 0.1);
            z-index: 0;
            transform: rotate(15deg);
        }

        .message-card h3 {
            color: var(--text-color);
            font-size: 1.3rem;
            margin-bottom: 1rem;
            z-index: 1;
            position: relative;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .message-card p {
            color: #b0b0b0;
            font-size: 0.95rem;
            margin: 0.6rem 0;
            z-index: 1;
            position: relative;
        }

        .message-card p strong {
            color: var(--text-color);
            font-weight: 600;
        }

        /* Reply Form */
        .reply-form {
            margin-top: 1.5rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .reply-form textarea {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #444;
            border-radius: 6px;
            background: #333;
            color: var(--text-color);
            font-size: 0.9rem;
            resize: vertical;
            min-height: 100px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .reply-form textarea:focus {
            outline: none;
            border-color: #00ff73;
            box-shadow: 0 0 10px rgba(0, 255, 115, 0.5);
        }

        .reply-form .btn {
            background: var(--accent-color);
            color: #fff;
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .reply-form .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 255, 115, 0.6);
        }

        .reply-form .btn::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.4s ease, height 0.4s ease;
        }

        .reply-form .btn:hover::after {
            width: 200%;
            height: 200%;
        }

        /* Animations */
        @keyframes slideIn {
            from { transform: translateY(-20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .admin-container h1 {
                font-size: 2rem;
            }
            .message-list {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            .message-card {
                padding: 1.2rem;
            }
        }

        @media (max-width: 480px) {
            .admin-container h1 {
                font-size: 1.6rem;
            }
            .message-card h3 {
                font-size: 1.1rem;
            }
            .message-card p {
                font-size: 0.85rem;
            }
            .reply-form .btn {
                width: 100%;
                padding: 0.6rem;
            }
        }
    </style>
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
