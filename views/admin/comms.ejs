                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item menu-open">
                            <a href="/admin/dashboard" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/products" class="nav-link">
                                <i class="nav-icon fas fa-cube"></i>
                                <p>Products</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/orders" class="nav-link">
                                <i class="nav-icon fas fa-shopping-bag"></i>
                                <p>Orders</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/carts" class="nav-link">
                                <i class="nav-icon fas fa-shopping-cart"></i>
                                <p>Carts</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/transactions" class="nav-link">
                                <i class="nav-icon fas fa-exchange-alt"></i>
                                <p>Transactions</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/users" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/support/comms" class="nav-link">
                                <i class="nav-icon fas fa-envelope"></i>
                                <p>Communications</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/settings" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Settings</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin/logout" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Logout</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <div class="container admin-container">
                <h1>Communications Panel</h1>

                <!-- Flash Messages -->
                <div class="flash-messages">
                    <% if (success_msg && success_msg.length > 0) { %>
                        <div class="flash-success"><%= success_msg %></div>
                    <% } %>
                    <% if (error_msg && error_msg.length > 0) { %>
                        <div class="flash-error"><%= error_msg %></div>
                    <% } %>
                </div>

                <!-- Message List -->
                <div class="message-list">
                    <% messages.forEach(msg => { %>
                        <div class="message-card">
                            <h3><%= msg.name %> </h3>
                            <p><strong>Order:</strong> <%= msg.orderNumber || 'N/A' %></p>
                            <p><strong>Message:</strong> <%= msg.message %></p>
                            <p><strong>Status:</strong> <%= msg.status %></p>
                            <% if (msg.reply) { %>
                                <p><strong>Reply:</strong> <%= msg.reply %></p>
                            <% } else { %>
                                <form class="reply-form" action="/support/reply" method="POST">
                                    <input type="hidden" name="messageId" value="<%= msg._id %>">
                                    <textarea name="reply" placeholder="Type your reply..." required></textarea>
                                    <button type="submit" class="btn">Send Reply</button>
                                </form>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark"></aside>

        <!-- Main Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.1
            </div>
            <strong>Copyright Â© 2025 <a href="/">Cloud 420</a>.</strong> All rights reserved.
        </footer>
    </div>

